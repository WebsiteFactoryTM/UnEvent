# =============================================================================
# SCHEDULER CONFIGURATION
# =============================================================================
# Master control: Set scheduler environment (dev|staging|production)
# If not set, falls back to NODE_ENV
# Default multipliers: dev=6x slower, staging=3x slower, production=1x
SCHEDULER_ENV=dev

# =============================================================================
# FEED ALGORITHM SCHEDULERS
# =============================================================================
# Flush Redis counters to metrics_daily (default: 10min prod, 30min staging, 60min dev)
SCHEDULER_FEED_FLUSH_INTERVAL_MINUTES=10

# Compute feed aggregates (default: 15min prod, 45min staging, 90min dev)
SCHEDULER_FEED_AGGREGATE_INTERVAL_MINUTES=15

# Rank feed segments (default: 20min prod, 60min staging, 120min dev)
SCHEDULER_FEED_RANK_INTERVAL_MINUTES=20

# =============================================================================
# HUB SNAPSHOT SCHEDULER
# =============================================================================
# Build hub snapshots - locations, services, events (default: 6h prod, 18h staging, 36h dev)
SCHEDULER_HUB_SNAPSHOT_INTERVAL_HOURS=6

# =============================================================================
# COUNTER SYNC SCHEDULERS
# =============================================================================
# Sync listing type usage counters (default: 24h prod, 72h staging, 144h dev)
SCHEDULER_SYNC_LISTING_TYPES_INTERVAL_HOURS=24

# Sync city usage counters (default: 24h prod, 72h staging, 144h dev)
SCHEDULER_SYNC_CITIES_INTERVAL_HOURS=24

# =============================================================================
# CLEANUP SCHEDULER
# =============================================================================
# Cleanup temporary media files (default: 1h prod, 3h staging, 6h dev)
SCHEDULER_CLEANUP_MEDIA_INTERVAL_HOURS=1